# KaChing Configuration
# Copy this file to .env and fill in your values

# Core Settings
KACHING_NICHE="accessibility and comfort technology"
KACHING_BUDGET_LIMIT=1000.0
KACHING_WORKSPACE="./workspace"

# Model Configuration
KACHING_MODEL_BACKEND=mlx  # mlx, litellm, vllm, transformers, inference_client, openai, azure_openai, bedrock
KACHING_MODEL_ID="mlx-community/gemma-3-4b-it-qat-4bit"
KACHING_MAX_TOKENS=2048
KACHING_TEMPERATURE=0.7
KACHING_PLANNING_INTERVAL=3

# Business Settings
KACHING_TARGET_REVENUE=5000.0
KACHING_CONTENT_FREQUENCY=3
KACHING_QUALITY_THRESHOLD=0.8

# Safety Settings
KACHING_MAX_DAILY_SPEND=10.0
KACHING_CONTENT_REVIEW=true
KACHING_AUTO_PUBLISH=false

# WordPress Settings
WORDPRESS_URL=https://comfortlife.tech
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_app_password

# Affiliate Settings
AMAZON_ASSOCIATE_ID=your_amazon_associate_id
CJ_WEBSITE_ID=your_commission_junction_id
SHAREASALE_AFFILIATE_ID=your_shareasale_id

# API Keys for Research
KEYWORD_API_KEY=your_keyword_research_api_key
SERP_API_KEY=your_serp_api_key

# MCP Server API Keys
BRAVE_API_KEY=your_brave_search_api_key
TAVILY_API_KEY=your_tavily_api_key
EXA_API_KEY=your_exa_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Model Backend Specific Settings

# MLX Settings (Mac)
MLX_TRUST_REMOTE_CODE=true

# LiteLLM Settings (Ollama/OpenAI/etc)
LITELLM_PROVIDER=ollama
LITELLM_API_KEY=your_api_key
LITELLM_BASE_URL=http://localhost:11434

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# Azure OpenAI Settings
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key
OPENAI_API_VERSION=2024-02-15-preview

# vLLM Settings
VLLM_MAX_MODEL_LEN=4096
VLLM_GPU_MEMORY_UTILIZATION=0.8

# Transformers Settings
TRANSFORMERS_DEVICE_MAP=auto
TRANSFORMERS_TORCH_DTYPE=float16
TRANSFORMERS_TRUST_REMOTE_CODE=false

# Analytics and Monitoring
GOOGLE_SHEETS_CREDENTIALS=/path/to/credentials.json
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id 